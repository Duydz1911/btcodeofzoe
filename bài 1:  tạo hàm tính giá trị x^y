#include <stdio.h>
    double power(double x, int y){
    float zoe = 1.0;
    for(int i = 0; i < y; i++){
        zoe *= x;
    }
    return zoe;
}
int main(){
    double x;
    int y;
    
    printf("nhap vao x: ");
    scanf("%lf", &x);
    printf("nhap vao y: ");
    scanf("%ld",&y);
    printf("ket qua: %.6f\n", power(x, y));
    return 0;
}
